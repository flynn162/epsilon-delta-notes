@twocol{
@ {
Let @math|{ (a+bi), (c+di) \in \Z[i] }|. Explain why @math{(a+bi)(c+di) = 1} @math{\implies} @math{(a-bi)(c-di) = 1}

@italic{Hint:} expand.
}

@ {
@italic{Proof:}

@math|{
\begin{aligned}
(a+bi)(c+di) &= (ac - bd) + (ad + bc)i \quad ^{\text{(*)}} \\
(a-bi)(c-di) &= (ac - bd) + (- ad - bc)i
\end{aligned}
}|
}
}
